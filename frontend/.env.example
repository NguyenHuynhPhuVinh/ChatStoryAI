# Cấu hình MySQL
MYSQL_HOST=mysql             # Địa chỉ host của MySQL server (sử dụng tên service trong Docker)
MYSQL_PORT=3306              # Port của MySQL server (mặc định: 3306)
MYSQL_USER=chatstory_user    # Tên người dùng MySQL
MYSQL_PASSWORD=chatstory_password  # Mật khẩu MySQL
MYSQL_ROOT_PASSWORD=root_password  # Mật khẩu root MySQL
MYSQL_DATABASE=chatstoryai   # Tên cơ sở dữ liệu MySQL

# Cấu hình NextAuth
NEXTAUTH_SECRET=             # Khóa bí mật cho NextAuth, dùng để mã hóa session
NEXTAUTH_URL=                # URL của ứng dụng (ví dụ: http://localhost:3000)
NEXT_PUBLIC_URL=             # URL công khai của ứng dụng

# Cấu hình Google Service Account
GOOGLE_CLIENT_EMAIL=         # Email của Google Service Account
GOOGLE_PRIVATE_KEY=          # Khóa riêng tư của Google Service Account
GOOGLE_DRIVE_FOLDER_ID=      # ID thư mục Google Drive để lưu trữ file

# Cấu hình Gmail
GMAIL_USER=                  # Địa chỉ email Gmail
GMAIL_APP_PASSWORD=          # Mật khẩu ứng dụng Gmail

# Cấu hình Google OAuth
GOOGLE_CLIENT_ID=            # ID ứng dụng Google OAuth
GOOGLE_CLIENT_SECRET=        # Khóa bí mật ứng dụng Google OAuth

# Cấu hình VNPay
VNP_TMN_CODE=                # Mã merchant VNPay
VNP_HASH_SECRET=             # Khóa bí mật VNPay

# Cấu hình API AI
GEMINI_API_KEY=              # Khóa API của Google Gemini
TOGETHER_API_KEY=            # Khóa API của Together AI
